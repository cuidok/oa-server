<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.cuidok.oa.server.user.mapper.UserQueryMapper">

    <select id="selectUserById" resultType="com.github.cuidok.oa.server.user.model.User">
        SELECT
            id,
            username,
            nick_name AS nickName,
            password,
            email
        FROM
            "user"
        WHERE
            id = #{id}
    </select>

    <select id="selectUserByUsername" resultType="com.github.cuidok.oa.server.user.model.User">
        SELECT
            id,
            username,
            nick_name AS nickName,
            password,
            email
        FROM
            "user"
        WHERE
            username = #{username}
    </select>

    <select id="selectUserByEmail" resultType="com.github.cuidok.oa.server.user.model.User">
        SELECT
            id,
            username,
            nick_name AS nickName,
            password,
            email
        FROM
            "user"
        WHERE
            email = #{email}
    </select>

</mapper>